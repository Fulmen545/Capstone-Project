<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edge"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/titleWidget"
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="5dp"
        tools:text="Title" />

    <TextView
        android:id="@+id/dateWidget"
        android:layout_width="156dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/titleWidget"
        android:layout_below="@+id/titleWidget"
        android:layout_marginTop="12dp"
        android:paddingBottom="5dp"
        tools:text="Date" />

    <TextView
        android:id="@+id/timeWidget"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/dateWidget"
        android:layout_alignBottom="@+id/dateWidget"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/dateWidget"
        android:paddingBottom="5dp"
        tools:text="Time" />

    <TextView
        android:id="@+id/locationWidget"
        android:layout_width="297dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/dateWidget"
        android:layout_below="@+id/dateWidget"
        android:layout_marginTop="11dp"
        android:paddingBottom="5dp"
        android:maxLines="1"
        tools:text="Location" />

    <TextView
        android:id="@+id/descriptionWidget"
        android:layout_width="297dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/locationWidget"
        android:layout_below="@+id/locationWidget"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Description" />

</RelativeLayout>