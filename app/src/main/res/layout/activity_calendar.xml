<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.riso.android.mealtracker.CalendarActivity">

    <CalendarView
        android:id="@+id/simpleCalendarView"
        android:contentDescription="@string/google_calendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/getEventsBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_elevation"
        android:layout_marginEnd="@dimen/fab_elevation"
        android:layout_marginStart="@dimen/fab_elevation"
        android:background="@color/colorPrimary"
        android:text="@string/btn_text"
        android:theme="@style/Button"
        android:contentDescription="@string/btn_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
